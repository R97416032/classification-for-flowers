<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBE470"
    android:orientation="vertical"
    tools:context=".activity.Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/plant"
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:layout_gravity="center"
                android:background="@mipmap/p"
                android:onClick="plant"></ImageButton>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="植物识别"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ingre"
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:layout_gravity="center"
                android:background="@mipmap/vf"
                android:onClick="ingre"></ImageButton>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="果蔬识别"></TextView>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/exit"
            android:layout_width="400px"
            android:layout_height="80dp"
            android:background="@mipmap/t"
            android:onClick="exitApp"
            android:paddingEnd="20dp"
            android:paddingRight="20dp"
            android:text="     退出"
            android:textColor="@color/color4" />
    </LinearLayout>


</LinearLayout>